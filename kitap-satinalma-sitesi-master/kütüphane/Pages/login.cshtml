@page
@model kütüphane.Pages.LoginModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 350px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
            border-radius: 15px;
        }

        h2 {
            text-align: center;
            font-size: 28px; /* Login başlığı büyütüldü */
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

        label {
            margin-bottom: 5px;
            text-align: left; /* Etiketler sola hizalandı */
            font-weight: bold;
            display: block;
        }

        input[type="text"],
        input[type="password"] {
            width: calc(100% - 40px);
            padding: 12px 20px;
            margin-bottom: 15px;
            display: block;
            border: 1px solid #b29e1e;
            box-sizing: border-box;
            border-radius: 5px;
        }

        button {
            width: 100%;
            padding: 14px 20px;
            margin: 8px 0;
            background-color: #b29e1e;
            color: white;
            border: none;
            border-radius: 7px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #b29e1e;
            opacity: 0.8;
        }

        .error-message {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form method="post">
            <h2>Giriş Yap</h2>
            <div>
                <label for="adSoyad">Ad Soyad:</label>
                <input type="text" id="adSoyad" name="adSoyad" asp-for="AdSoyad" required>
            </div>
            <div>
                <label for="sifre">Şifre:</label>
                <input type="password" id="sifre" name="sifre" asp-for="Sifre" required>
            </div>
            <div>
                <input type="hidden" id="gizliElement">
                <button type="submit">Login</button>
            </div>
            <div class="error-message">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        </form>
    </div>
</body>
</html>
